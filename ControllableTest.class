package ch08;

public class ControllableTest {
	public static void main(String[] args) {
		String who="I";
		Controllable tv = (x,y) -> {
			if(y)
				System.out.println(who+"turn on"+ x);
			else System.out.println(who+"turn off"+ x);
		};
	tv.power("Radio", true);
	tv.power("Radio",false);
	tv.repair();
	Controllable.reset();
	}
}
